@model EventHub.ViewModels.EventForViewModel

@{
    ViewBag.Title = Model.Heading;
}


@using (Html.BeginForm(Model.Action, "Events"))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(m => m.Id)

<div class="eventhub-section ">
    <h2>@Model.Heading</h2>
    <hr/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "eg AWS Meetup" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Vanue)
                @Html.TextBoxFor(m => m.Vanue, new { @class = "form-control", placeholder = "eg Dhanmondi 32, Dhaka 1216" })
                @Html.ValidationMessageFor(m => m.Vanue)
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Date)
                @Html.TextBoxFor(m => m.Date, new { @class = "form-control datetimepickerDateOnly",  placeholder = "eg 12 Jan 2021" })
                @Html.ValidationMessageFor(m => m.Date)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Time)
                @Html.TextBoxFor(m => m.Time, new { @class = "form-control datetimepickerTimeOnly", placeholder = "eg 12:30 PM" })
                @Html.ValidationMessageFor(m => m.Time)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Category)
                @Html.DropDownListFor(m => m.Category, new SelectList(Model.Categories, "Id", "Name"), "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Category)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Seat)
                @Html.TextBoxFor(m => m.Seat, new { @class = "form-control", placeholder = "Seat limit" })
                @Html.ValidationMessageFor(m => m.Seat)
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Image)
                <input type="file" name="ImageUpload" id="eventImageUpload" required />
            </div>

            <img class="event-banner" id="eventImage" />

            <div class="form-group">
                @Html.LabelFor(m => m.ShortDescription)
                @Html.TextAreaFor(m => m.ShortDescription, new { @class = "form-control", placeholder = "Your short description", rows = "4" })
                @Html.ValidationMessageFor(m => m.ShortDescription)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Your description", rows = "5" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
        <div class="col-md-12">


            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save event</button>
            </div>
        </div>
    </div>
</div>

}



@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}