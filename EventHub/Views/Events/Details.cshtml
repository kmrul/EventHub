@model EventHub.ViewModels.EventsViewModel
@{
    ViewBag.Title = "Details";
}


<h2> @Html.DisplayFor(m => m.Event.Name, new { @class = "label" })</h2>

<p>
    <b>Organizer Name:  @Html.DisplayFor(m => m.Event.Organizer.Name, new { @class = "label" })</b>
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-info">Following</button>
        }
        else
        {
            <button class="btn btn-default">Follow</button>
        }
    }

<p>Performing at @Model.Event.Vanue on @Model.Event.DateTime</p>

