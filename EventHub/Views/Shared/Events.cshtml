@model EventHub.ViewModels.EventsViewModel
@{
    ViewBag.Title = "Events";
}

<h2>@Model.Heading</h2>

<ul class="events voffset4">
    @foreach (var evnt in Model.UpcommingEvents)
    {
        <li class="event-list">
            <div class="date">
                <div class="month">
                    @evnt.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @evnt.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <div class="name">
                    @evnt.Name
                </div>
                <div class="organizer">
                    Organizer: @evnt.Organizer.Name
                </div>
                <div class="category">
                    @evnt.Category
                </div>
            </div>

            <div class="actions">
                @if (Model.ShowingActions)
                {
                    @*<button class="btn btn-primary" data-user-id="@evnt.Organizer.Id">Follow</button>*@
                    <button class="btn btn-primary btn-sm js-toggle-attendance" data-event-id="@evnt.Id">Goging ?</button>
                }
            </div>
        </li>
    }
</ul>


@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { "EventId": button.attr("data-event-id") })
                    .done(function () {
                        button
                            .removeClass("btn-primary")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("Something failed");
                    });
            });
        });
    </script>
}
