@model EventHub.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="row">
    <div class="col-md-6 col-lg-offset-3">
        <div class="eventhub-section">
            <div class="eventhub-login-logo">
                <img src="/Images/event-hub.png" class="img img-circle" />
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center">Create a new account in EventHub</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 text-adjustment-form" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label text-adjustment-form" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label text-adjustment-form" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label text-adjustment-form" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-default pull-right btn-login-custom-primary" value="Register" />

                    </div>
                </div>
                <hr />
                <p>Have alreay an account ? <a href="@Url.Action("login","account")">Login</a></p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
